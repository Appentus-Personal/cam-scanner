<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bottom_sheet">



    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@color/ViewColor" />


    <TextView
        android:id="@+id/tvInputText"
        style="@style/TextSemiBold12"
        android:layout_below="@id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:singleLine="true"
        android:text="Sort by" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tvInputText"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#59606A" />



    <RadioGroup
        android:id="@+id/radio_grp"
        android:layout_width="fill_parent"
        android:layout_below="@+id/view2"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:inputType="text">


        <RadioButton
            android:id="@+id/system_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="ltr"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="System Default"
            android:textColor="@color/TextTheme"
            android:textSize="@dimen/_12sdp" />

        <RadioButton
            android:id="@+id/light_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="ltr"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Light"
            android:textColor="@color/TextTheme"
            android:textSize="@dimen/_12sdp" />

        <RadioButton
            android:id="@+id/dark_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layoutDirection="ltr"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Dark"
            android:textColor="@color/TextTheme"
            android:textSize="@dimen/_12sdp" />

    </RadioGroup>

</RelativeLayout>