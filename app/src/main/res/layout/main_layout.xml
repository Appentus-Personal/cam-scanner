<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ThemeBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <ImageView
                    android:id="@+id/iv_drawer"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:onClick="onClick"
                  android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/hamburger_icn" />

                <TextView
                    style="@style/TextPopBold22"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_below="@id/iv_drawer"
                    android:text="Documents"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


                <ImageView
                    android:id="@+id/iv_list"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                     android:layout_below="@id/iv_drawer"
                    android:layout_alignParentEnd="true"
                    android:onClick="onClick"
                    android:src="@drawable/folder" />

                <ImageView
                    android:id="@+id/iv_grid"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_below="@id/iv_drawer"
                    android:layout_alignParentEnd="true"
                    android:onClick="onClick"
                    android:visibility="invisible"
                    android:src="@drawable/grid_icn" />


                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_toStartOf="@+id/iv_more"
                    android:onClick="onClick"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/search" />

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:onClick="onClick"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/more" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@drawable/search_bar_bg"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_close_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:onClick="onClick"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_search_small" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_toStartOf="@+id/iv_clear_txt"
                    android:layout_toEndOf="@+id/iv_close_search"
                    android:background="@color/transparent"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Search for Document..."
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="#858997"
                    android:textColorHint="#a2a8b9"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_clear_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:onClick="onClick"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:visibility="invisible"
                    app:tint="#858997" />
            </RelativeLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tag_tabs"
                style="@style/CustomTabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/ThemeBg"
                android:layout_marginStart="@dimen/_5sdp"
                app:tabBackground="@drawable/selector_tab_layout"
                app:tabGravity="fill"
                app:tabTextAppearance="@style/MyCustomTabText"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/tab_white"
                app:tabTextColor="@color/TextTheme" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ly_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_30sdp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:src="@drawable/default_doc" />

                    <TextView
                        android:id="@+id/tv_empty"
                        style="@style/TextPopReg12"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="@string/noDocumentScan"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                  android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/main_curve_border"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="4dp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_group_camera"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:onClick="onClick"
                    android:src="@drawable/grp_camera" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="#ffffff"/>


                <ImageView
                    android:id="@+id/gallery"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:onClick="onClick"
                    android:src="@drawable/groupgallery" />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
