<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bottom_sheet"
    android:orientation="vertical">


    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/ViewColor" />

    <!-- <include
         android:id="@+id/admob_native_container"
         layout="@layout/admob_native_medium"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/_5sdp"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_marginRight="@dimen/_5sdp"
         android:layout_height="@dimen/_200sdp"
         android:visibility="gone" />
-->

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:tint="@color/black"
            android:src="@drawable/sort" />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/create_folder"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:tint="@color/black"
            android:src="@drawable/share" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_toEndOf="@id/LL1"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/sort_by"
            style="@style/TextPopMed14"
            android:layout_marginTop="@dimen/_8sdp"
            android:onClick="BottomClick"
            android:text="Sort by"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/create_folder"
            style="@style/TextPopMed14"
            android:layout_marginTop="@dimen/_14sdp"
            android:onClick="BottomClick"
            android:text="Create Folder"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/share_all"
            style="@style/TextPopMed14"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="BottomClick"
            android:text="Share All Documents"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>
</RelativeLayout>