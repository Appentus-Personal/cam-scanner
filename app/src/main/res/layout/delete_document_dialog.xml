<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bottom_sheet"
    android:elevation="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <include
                    android:id="@+id/admob_native_container"
                    layout="@layout/admob_native_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <View
                        android:id="@+id/view"
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/ViewColor" />

                    <TextView
                        android:id="@+id/tvInputText"
                        style="@style/TextSemiBold12"
                        android:layout_below="@id/view"
                        android:layout_centerInParent="true"

                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="Delete" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/tvInputText"
                        android:background="#59606A" />

                    <!--    <ImageView
                            android:id="@+id/iv_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_close_black_24dp"
                            android:tint="@color/txt_color" />-->

                </RelativeLayout>


                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/bottom_delete"/>


                <TextView
                    style="@style/TextPopReg12"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxWidth="@dimen/_180sdp"
                    android:text="@string/areUSure"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_4sdp">

                <TextView
                    android:id="@+id/iv_close"
                    style="@style/TextPopMed14"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/white_border_grey"
                    android:paddingStart="@dimen/_40sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="@string/cancel"
                    android:textColor="@color/TextTheme"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_delete"
                    style="@style/TextPopMed14"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/btn_curve_bg"
                    android:paddingStart="@dimen/_50sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_50sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="@string/ok"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>



